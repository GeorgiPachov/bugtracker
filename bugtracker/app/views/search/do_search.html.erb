<%= render 'form' %> <h3>Search results for <%= @search_term %></h3>

<table>
	<tr>
		<th>Title</th>
		<th>Reported by</th>
		<th>Project</th>
		<th>Status</th>
		<th>Assignee</th>
		<th>Created on:</th>
		<th>Last update on:</th>
	</tr>
	<% @results.each do |ticket| %>
	<tr>
		<td><%= link_to ticket.title, edit_ticket_path(ticket) %></td>
		<td><%= ticket.reported_by %></td>
		<td><%= ticket.project.name %></td>
		<td><%= ticket.status %></td>
		<td><%= User.find(ticket.assignee).name %></td>
		<td><%= ticket.created_at %></td>
		<td><%= ticket.updated_at %></td>
		<!--
		<td><%= link_to 'Show', ticket %></td>
		<td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
		<td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
	</tr>
	<% end %>
</table>