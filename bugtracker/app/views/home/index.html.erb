<h1>Welcome to Bugtracker!</h1>
<% unless user_signed_in? -%>
<p>
	<%= link_to 'Sign in', new_user_session_path %>
	<%= link_to 'Sign up as User', new_user_registration_path %>
</p>
<% else -%>
<p>
	<div class = "bubble"><%= link_to 'Administration', :controller => 'admin' %>

</div>
	<table class="tabled_view">
		
		<thead>
			<tr>

				<th>Select a project:</th>
		
			</tr>

	
		</thead>	
<% @projects.each do |project| %>
		<tr>
		
			<br />
			<td><%= link_to project.name, project %></td>
		</tr>
		<% end %>
	
		
</table>

</p>
<% end -%>

