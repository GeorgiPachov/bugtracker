<h1>Welcome to Bugtracker!</h1>
<% if user_signed_in? -%>
<div>
	<%= link_to 'Administration', :controller => 'admin' %>

</div>
<br />
<table class="tabled_view">

	<thead>
		<tr>
			<th>Project:</th>
			<th>Last ticket updated: </th>
			<th>On, By: </th>
		</tr>
	</thead>
	<% @projects.each do |project| %>
	<tr>
		<td><%= link_to(project) do %>
		<div>
			<%= project.name %>
		</div> <% end %> </td>
		<td> TODO: </td>
		<td> TODO: </td>
	</tr>
	<% end %>

</table>

<% else -%>
<%= link_to 'Sign in', new_user_session_path %>
<%= link_to 'Sign up as User', new_user_registration_path %>
<% end -%>

