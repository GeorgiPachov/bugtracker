    <%= f.label :project_id %><br />
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :assignee %><br />
    <%= f.collection_select :assignee, User.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.collection_select :status, TicketStatus.all, :id, :status %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
